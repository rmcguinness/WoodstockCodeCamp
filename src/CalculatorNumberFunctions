export const handleClick = (num, display, setDisplay, lastClickedOperator) => {

  if (num.func === 'handleNumberClick') {
    handleNumberClick(num, display, setDisplay, lastClickedOperator);
  }

  else {
    handleDotClick(num, display, setDisplay);
  }

}

const handleNumberClick = (num, display, setDisplay, lastClickedOperator) => {
  if (display === '0' || lastClickedOperator === true) {
    setDisplay(num.val)
    lastClickedOperator = false

  } else {
    setDisplay(display + num.val)
  }
}

const handleDotClick = (num, display, setDisplay) => {
  if (!display.includes(num.val)) { 
    setDisplay(display + num.val)
  }
}





